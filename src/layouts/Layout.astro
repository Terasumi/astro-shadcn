---
interface Props {
    title: string;
}
import SearchForm from "@/components/SearchForm";
import { NavigationMenuDemo } from "@/components/NavigationMenuDemo";
const { title } = Astro.props;
import { Bell, User } from "lucide-react";
import { ClientRouter } from "astro:transitions";
import ProgressBar from "astro-vtbot/components/ProgressBar.astro";

import "@/styles/globals.css";
import { ModeToggle } from "@/components/ModeToggle";
---

<!doctype html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
        <ProgressBar />
    </head>
    <body class="min-h-screen bg-slate-950 text-white antialiased">
        <nav
            class="sticky top-0 z-50 border-b border-white/10 bg-slate-950/80 backdrop-blur"
            transition:persist
        >
            <div
                class="mx-auto flex w-full max-w-7xl items-center justify-between gap-6 px-4 py-3"
            >
                <div class="flex items-center gap-4">
                    <a
                        href="/"
                        class="flex items-center gap-2 flex-shrink-0"
                        aria-label="AstroFlim Home"
                    >
                        <span
                            class="rounded-full bg-sky-500/20 px-2 py-1 text-xs font-semibold uppercase tracking-wide text-sky-200"
                        >
                            AstroFlim
                        </span>
                    </a>
                    <div class="hidden lg:block">
                        <NavigationMenuDemo client:idle />
                    </div>
                </div>
                <div
                    class="flex w-full flex-1 items-center justify-end gap-4 md:w-auto"
                >
                    <div class="hidden max-w-sm flex-1 md:block">
                        <SearchForm client:load />
                    </div>
                </div>
            </div>
        </nav>
        <slot />
        <footer
            class="flex justify-center items-center w-full bg-slate-950/80 py-6"
        >
            <p>
                Trang web được làm với mục đích học tập, không có mục đích
                thương mại.
            </p>
        </footer>
    </body><script is:inline>
        const getThemePreference = () => {
            if (
                typeof localStorage !== "undefined" &&
                localStorage.getItem("theme")
            ) {
                return localStorage.getItem("theme");
            }
            return window.matchMedia("(prefers-color-scheme: dark)").matches
                ? "dark"
                : "light";
        };
        const isDark = getThemePreference() === "dark";
        document.documentElement.classList[isDark ? "add" : "remove"]("dark");

        if (typeof localStorage !== "undefined") {
            const observer = new MutationObserver(() => {
                const isDark =
                    document.documentElement.classList.contains("dark");
                localStorage.setItem("theme", isDark ? "dark" : "light");
            });
            observer.observe(document.documentElement, {
                attributes: true,
                attributeFilter: ["class"],
            });
        }
    </script>
</html>
