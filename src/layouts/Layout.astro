---
interface Props {
    title: string;
}
const { title } = Astro.props;
import { ClientRouter } from "astro:transitions";
import ProgressBar from "astro-vtbot/components/ProgressBar.astro";

import "@/styles/globals.css";
import SearchForm from "@/components/SearchForm";
import { NavigationMenuDemo } from "@/components/NavigationMenuDemo";
import MobileMenu from "@/components/MobileMenu";
---

<!doctype html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
        <ProgressBar />
    </head>
    <body class="min-h-screen bg-slate-950 text-white antialiased">
        <nav
            class="sticky top-0 z-50 border-b border-white/10 bg-slate-950/80 backdrop-blur"
            transition:persist
        >
            <div
                class="mx-auto flex w-full max-w-7xl flex-col gap-4 px-4 py-3 md:flex-row md:items-center md:justify-between"
            >
                <div
                    class="flex w-full items-center justify-between gap-3 md:w-auto md:justify-start"
                >
                    <a
                        href="/"
                        class="flex flex-shrink-0 items-center gap-2"
                        aria-label="AstroFlim Home"
                    >
                        <span
                            class="rounded-full bg-sky-500/20 px-2 py-1 text-xs font-semibold uppercase tracking-wide text-sky-200"
                        >
                            AstroFlim
                        </span>
                    </a>
                    <div class="flex items-center gap-2 md:hidden">
                        <SearchForm client:only="react" variant="icon" />
                        <MobileMenu client:only="react" />
                    </div>
                </div>
                <div
                    class="hidden w-full md:flex md:flex-1 md:items-center md:gap-6"
                >
                    <NavigationMenuDemo client:only="react" />
                </div>
                <div
                    class="hidden w-full md:block md:w-auto md:max-w-sm md:flex-1"
                >
                    <SearchForm client:only="react" />
                </div>
            </div>
        </nav>
        <slot />
        <footer
            class="flex justify-center items-center w-full bg-slate-950/80 py-6"
        >
            <p>
                Trang web được làm với mục đích học tập, không có mục đích
                thương mại.
            </p>
        </footer>
    </body>
</html>
