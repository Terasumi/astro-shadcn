---
interface Props {
    title: string;
}
import SearchForm from "@/components/SearchForm";
const { title } = Astro.props;
import { Bell, User } from "lucide-react";
import { ClientRouter } from "astro:transitions";
import ProgressBar from "astro-vtbot/components/ProgressBar.astro";

import "@/styles/globals.css";
---

<!doctype html>
<html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
        <ProgressBar />
        <style>
            ::view-transition-old(root) {
                animation: slideOutFade 0.35s ease-in-out both;
            }
            ::view-transition-new(root) {
                animation: slideInFade 0.35s ease-in-out both;
            }
            @keyframes slideOutFade {
                from {
                    opacity: 1;
                    transform: translateY(0);
                }
                to {
                    opacity: 0;
                    transform: translateY(-10px);
                }
            }
            @keyframes slideInFade {
                from {
                    opacity: 0;
                    transform: translateY(10px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>
    </head>
    <body class="min-h-screen bg-slate-950 text-white antialiased">
        <nav
            class="sticky top-0 z-50 border-b border-white/10 bg-slate-950/80 backdrop-blur"
            transition:persist
        >
            <div
                class="mx-auto flex w-full max-w-7xl items-center justify-between gap-6 px-4 py-4"
            >
                <div class="flex items-center gap-8">
                    <a
                        href="/"
                        class="flex items-center gap-2"
                        aria-label="AstroFlim Home"
                    >
                        <span
                            class="rounded-full bg-sky-500/20 px-2 py-1 text-xs font-semibold uppercase tracking-wide text-sky-200"
                        >
                            AstroFlim
                        </span>
                    </a>
                    <div
                        class="hidden items-center gap-4 text-sm text-neutral-300 md:flex"
                    >
                        <a
                            href="/"
                            class="rounded-full bg-white px-4 py-1.5 font-medium text-slate-950 shadow-sm"
                            >Home</a
                        >
                        <a
                            href="/danh-sach/phim-le"
                            class="rounded-full px-4 py-1.5 transition hover:bg-white/10"
                            >Movies</a
                        >
                        <a
                            href="/danh-sach/tv-show"
                            class="rounded-full px-4 py-1.5 transition hover:bg-white/10"
                            >TV shows</a
                        >
                        <a
                            href="/danh-sach/the-thao"
                            class="rounded-full px-4 py-1.5 transition hover:bg-white/10"
                            >Sports</a
                        >
                        <a
                            href="/danh-sach/series"
                            class="rounded-full px-4 py-1.5 transition hover:bg-white/10"
                            >Series</a
                        >
                    </div>
                </div>
                <div
                    class="flex w-full flex-1 items-center justify-end gap-4 md:w-auto"
                >
                    <div class="hidden max-w-sm flex-1 md:block">
                        <SearchForm client:idle />
                    </div>
                    <button
                        class="hidden rounded-full border border-white/10 bg-white/5 p-2 text-white hover:bg-white/10 md:inline-flex"
                        aria-label="Notification"
                    >
                        <Bell className="h-4 w-4" />
                    </button>
                    <button
                        class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/10 text-white hover:bg-white/20"
                        aria-label="Hồ sơ"
                    >
                        <User className="h-4 w-4" />
                    </button>
                </div>
            </div>
        </nav>
        <slot />
        <footer class="w-full bg-slate-950/80 py-6">
            <div
                class="mx-auto flex max-w-7xl flex-col items-start gap-2 px-4 text-sm text-white/60 sm:flex-row sm:items-center sm:justify-between"
            >
                <p class="font-medium text-white/80">AstroFlim Prime</p>
                <p>
                    Trang web được làm với mục đích học tập, không có mục đích
                    thương mại.
                </p>
            </div>
        </footer>
    </body>
</html>
