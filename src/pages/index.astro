---
import Layout from "../layouts/Layout.astro";
import MovieTypeSelector from "@/components/MovieTypeSelector";
import type { Item, ResponseFlimType } from "@/types";
import { getSecret } from "astro:env/server";

const PUBLIC_PHIM_MOI = getSecret("PUBLIC_PHIM_MOI");

const latestResponse = await fetch(
    `${PUBLIC_PHIM_MOI}/danh-sach/phim-moi-cap-nhat?page=1`,
    {
        cache: "force-cache",
        headers: {
            "Cache-Control": `max-age=${3600 * 6}, s-maxage=${3600 * 6}, stale-while-revalidate=${3600 * 12}`,
        },
    },
);

const latestData: ResponseFlimType = await latestResponse.json();
const items = latestData?.items ?? [];

const featured = items.slice(0, 5);
const heroMovie = featured[0];
const suggestionStrip = items.slice(1, 9);
const recommendationStrip = items.slice(9, 17);

function getPoster(url?: string) {
    if (!url) return null;
    return `//wsrv.nl/?url=${url}&w=1280&h=720&output=webp`;
}

function getThumb(url?: string) {
    if (!url) return null;
    return `//wsrv.nl/?url=${url}&w=400&h=240&output=webp`;
}

function formatTimeStamp(item?: Item) {
    const timeString = item?.modified?.time;
    if (!timeString) return null;
    const parsed = new Date(timeString);
    if (Number.isNaN(parsed.valueOf())) return null;
    return parsed.toLocaleDateString("vi-VN", {
        day: "2-digit",
        month: "long",
        year: "numeric",
    });
}
---

<Layout title="AstroFlim Prime">
    <main class="bg-slate-950 text-white">
        <section
            class="relative mx-auto flex w-full max-w-7xl flex-col gap-12 px-4 pb-20 pt-16 sm:pt-20 md:pt-24"
        >
            {
                heroMovie ? (
                    <div class="relative overflow-hidden rounded-3xl bg-slate-900/70 shadow-2xl ring-1 ring-white/10">
                        <div class="absolute inset-0">
                            {heroMovie?.thumb_url && (
                                <img
                                    src={getPoster(heroMovie.thumb_url)}
                                    alt={heroMovie.name}
                                    class="h-full w-full object-cover opacity-70"
                                    loading="lazy"
                                />
                            )}
                            <div class="absolute inset-0 bg-gradient-to-tr from-slate-950 via-slate-950/70 to-slate-900/30" />
                        </div>

                        <div class="relative flex flex-col gap-6 px-6 py-14 sm:px-10 md:px-14 lg:px-20">
                            <div class="flex flex-wrap items-center gap-3 text-xs font-medium uppercase tracking-wide text-white/70">
                                <span class="rounded-full bg-white/15 px-3 py-1">
                                    New Arrival
                                </span>
                                {heroMovie.year && (
                                    <span>{heroMovie.year}</span>
                                )}
                                {formatTimeStamp(heroMovie) && (
                                    <span>
                                        Cập nhật {formatTimeStamp(heroMovie)}
                                    </span>
                                )}
                            </div>

                            <div class="max-w-3xl space-y-3">
                                <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
                                    {heroMovie.name}
                                </h1>
                                <p class="text-base text-white/80 sm:text-lg">
                                    {heroMovie.origin_name}
                                </p>
                            </div>

                            <div class="flex flex-wrap gap-4">
                                <a
                                    href={`/phim/${heroMovie.slug}`}
                                    class="inline-flex items-center justify-center rounded-full bg-white px-6 py-2 text-sm font-semibold text-slate-900 transition hover:bg-sky-200"
                                >
                                    Xem ngay
                                </a>
                                <a
                                    href={`/phim/${heroMovie.slug}`}
                                    class="inline-flex items-center justify-center rounded-full border border-white/30 px-6 py-2 text-sm font-semibold text-white transition hover:border-white hover:bg-white/10"
                                >
                                    Chi tiết
                                </a>
                            </div>

                            {featured.length > 1 && (
                                <div class="flex gap-2 pt-6">
                                    {featured.map((_, index) => (
                                        <span
                                            class={`h-2 w-8 rounded-full transition ${
                                                index === 0
                                                    ? "bg-white"
                                                    : "bg-white/30"
                                            }`}
                                            aria-hidden="true"
                                        />
                                    ))}
                                </div>
                            )}
                        </div>
                    </div>
                ) : (
                    <div class="rounded-3xl border border-white/10 bg-slate-900/70 p-12 text-center text-sm text-white/70">
                        Không thể tải dữ liệu phim mới. Vui lòng thử lại sau.
                    </div>
                )
            }

            {
                suggestionStrip.length > 0 && (
                    <section class="space-y-5">
                        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                            <h2 class="text-xl font-semibold sm:text-2xl">
                                TV shows chúng tôi gợi ý cho bạn
                            </h2>
                            <a
                                href="/danh-sach/phim-bo"
                                class="text-sm font-medium text-sky-300 hover:text-sky-200"
                            >
                                Xem thêm
                            </a>
                        </div>
                        <div class="flex gap-5 overflow-x-auto pb-4">
                            {suggestionStrip.map((item) => (
                                <a
                                    href={`/phim/${item.slug}`}
                                    class="group relative w-[220px] shrink-0 overflow-hidden rounded-3xl bg-slate-900/60 shadow-lg ring-1 ring-white/10 transition hover:-translate-y-1 hover:ring-white/40"
                                >
                                    {item.poster_url && (
                                        <img
                                            src={getThumb(item.poster_url)}
                                            alt={item.name}
                                            class="h-36 w-full object-cover transition duration-300 group-hover:scale-105"
                                            loading="lazy"
                                        />
                                    )}
                                    <div class="space-y-2 p-4">
                                        <p class="text-xs font-semibold uppercase tracking-wide text-sky-300">
                                            New Episode
                                        </p>
                                        <h3 class="text-sm font-semibold leading-snug line-clamp-2">
                                            {item.name}
                                        </h3>
                                        <p class="text-xs text-white/60 line-clamp-1">
                                            {item.origin_name}
                                        </p>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </section>
                )
            }

            {
                recommendationStrip.length > 0 && (
                    <section class="space-y-5">
                        <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
                            <h2 class="text-xl font-semibold sm:text-2xl">
                                Phim đề xuất dành cho bạn
                            </h2>
                            <a
                                href="/danh-sach/phim-le"
                                class="text-sm font-medium text-sky-300 hover:text-sky-200"
                            >
                                Khám phá thêm
                            </a>
                        </div>
                        <div class="flex gap-5 overflow-x-auto pb-4">
                            {recommendationStrip.map((item) => (
                                <a
                                    href={`/phim/${item.slug}`}
                                    class="group relative w-[220px] shrink-0 overflow-hidden rounded-3xl bg-slate-900/60 shadow-lg ring-1 ring-white/10 transition hover:-translate-y-1 hover:ring-white/40"
                                >
                                    {item.poster_url && (
                                        <img
                                            src={getThumb(item.poster_url)}
                                            alt={item.name}
                                            class="h-36 w-full object-cover transition duration-300 group-hover:scale-105"
                                            loading="lazy"
                                        />
                                    )}
                                    <div class="space-y-2 p-4">
                                        <span class="inline-flex items-center rounded-full bg-white/10 px-2.5 py-1 text-[11px] font-medium text-white/80">
                                            New Movie
                                        </span>
                                        <h3 class="text-sm font-semibold leading-snug line-clamp-2">
                                            {item.name}
                                        </h3>
                                        <p class="text-xs text-white/60 line-clamp-1">
                                            {item.origin_name}
                                        </p>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </section>
                )
            }

            <section
                class="rounded-3xl border border-white/10 bg-slate-900/70 p-8"
            >
                <div class="space-y-6">
                    <div class="max-w-2xl space-y-2">
                        <h2 class="text-2xl font-semibold sm:text-3xl">
                            Khám phá theo thể loại
                        </h2>
                        <p class="text-sm text-white/70">
                            Chọn nhanh danh mục bạn yêu thích để tìm các bộ phim
                            phù hợp ngay lập tức.
                        </p>
                    </div>
                    <div
                        class="rounded-3xl border border-white/10 bg-slate-950/80 p-6"
                    >
                        <MovieTypeSelector client:idle />
                    </div>
                </div>
            </section>
        </section>
    </main>
</Layout>
